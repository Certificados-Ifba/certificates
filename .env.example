# ========================================
# CONFIGURAÇÕES DE PORTAS DOS SERVIÇOS
# ========================================

# Frontend Web
WEB_PORT=3000

# API Gateway
API_GATEWAY_PORT=3001

# Microserviços Backend
USER_SERVICE_PORT=3004
EVENT_SERVICE_PORT=3002
TOKEN_SERVICE_PORT=3003
MAILER_SERVICE_PORT=3005
PERMISSION_SERVICE_PORT=3006
GENERIC_SERVICE_PORT=3007
ACTIVITY_SERVICE_PORT=3008
CERTIFICATE_SERVICE_PORT=3009
STORAGE_SERVICE_PORT=3010

# ========================================
# CONFIGURAÇÕES DO MONGODB
# ========================================

# Configurações do Banco
MONGO_USER=mongo
MONGO_PASSWORD=pass
MONGO_DATABASE=certificates
MONGO_ROOT_PASSWORD=mongo
MONGO_PORT=27017
MONGO_HOST=db

# Interface Web do MongoDB (mongo-express)
MONGO_GUI_PORT=4000
MONGO_GUI_USER=admin
MONGO_GUI_PASSWORD=admin

# ========================================
# CONFIGURAÇÕES DO FRONTEND
# ========================================

# hCaptcha (para formulários)
HCAPTCHA_SITEKEY=sua_chave_hcaptcha_aqui

# URI da API
API_URI=http://localhost:3001

# ========================================
# CONFIGURAÇÕES DE DOMÍNIO E HOSTS
# ========================================

# Domínio principal
DOMAIN=localhost

# Hosts dos serviços
API_GATEWAY_HOST=gateway
USER_GATEWAY_HOST=user
EVENT_SERVICE_HOST=event
GENERIC_SERVICE_HOST=generic
ACTIVITY_SERVICE_HOST=activity
CERTIFICATE_SERVICE_HOST=certificate
TOKEN_SERVICE_HOST=token
MAILER_SERVICE_HOST=mailer
PERMISSION_SERVICE_HOST=permission
STORAGE_SERVICE_HOST=storage

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================

# Segredo da aplicação para JWT
APP_SECRET=seu_segredo_super_secreto_aqui

# ========================================
# CONFIGURAÇÕES DO SERVIÇO DE EMAIL
# ========================================

# Configurações do servidor SMTP
MAILER_HOST=smtp.gmail.com
MAILER_PORT=587
MAILER_TLS=true
MAILER_SECURE=false
MAILER_USER=seu_email@gmail.com
MAILER_PASS=sua_senha_de_app
MAILER_FROM=seu_email@gmail.com

# Desabilitar serviço de email (0 = habilitado, 1 = desabilitado)
MAILER_DISABLED=0

# ========================================
# CONFIGURAÇÕES DO TOKEN JWT
# ========================================

# Tempo de expiração do token (padrão: 1 dia)
TOKEN_EXPIRES_IN=1d
