FROM node:14-alpine

WORKDIR /usr/src/app

RUN yarn config set enableIPv6 false \
 && yarn config set networkFamily ipv4 \
 && yarn config set enable-http2 false

# arquivos base
COPY package.json yarn.lock prettier.config.js tsconfig.json .eslintrc.js .eslintignore ./
COPY packages/shared ./packages/shared
COPY packages/backend/user/package.json ./packages/backend/user/

# instala dependências
RUN yarn install --frozen-lockfile

# copia código
COPY packages/backend/user ./packages/backend/user

# build do user (NestJS)
RUN yarn workspace @certificates/user build

WORKDIR /usr/src/app/packages/backend/user

EXPOSE 4004

CMD ["node", "dist/main.js"]
