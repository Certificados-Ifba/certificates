{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@src": ["./"],
      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@dtos": ["./dtos"],
      "@dtos/*": ["./dtos/*"],
      "@hocs": ["./hocs"],
      "@hocs/*": ["./hocs/*"],
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],
      "@layouts": ["./layouts"],
      "@layouts/*": ["./layouts/*"],
      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],
      "@providers": ["./providers"],
      "@providers/*": ["./providers/*"],
      "@services": ["./services"],
      "@services/*": ["./services/*"],
      "@styles": ["./styles"],
      "@styles/*": ["./styles/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
    }
  },
  "include": [
    "**/next-env.d.ts",
    "**/react-table-config.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
